<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/teal_700"
    xmlns:android="http://schemas.android.com/apk/res/android">
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Flat_MainPage">
    <androidx.cardview.widget.CardView
        android:id="@+id/flat_idcard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardBackgroundColor="#FFC107">

        <TextView
            android:id="@+id/flatid_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:text="FLAT ID: "
            android:textAlignment="center"
            android:gravity="center"
            android:textSize="40dp"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>
     <androidx.cardview.widget.CardView
        android:id="@+id/MonthlyCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="@+id/flat_idcard"
        app:layout_constraintStart_toStartOf="@+id/flat_idcard"
        app:layout_constraintTop_toBottomOf="@+id/flat_idcard"
        app:cardBackgroundColor="#F2F8EC">
         <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:textSize="40dp"
            android:text="MONTH-WISE PAYMENTS"
            android:textAlignment="center"
            android:gravity="center"
            android:textStyle="bold"
            android:id="@+id/month_wise_payment"/>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/Renters"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="@+id/MonthlyCard"
        app:layout_constraintStart_toStartOf="@+id/MonthlyCard"
        app:layout_constraintTop_toBottomOf="@+id/MonthlyCard"
        app:cardBackgroundColor="#F2F8EC">
         <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:textSize="40dp"
            android:text="RENTER DETAILS"
            android:textAlignment="center"
            android:gravity="center"
            android:textStyle="bold"
            android:id="@+id/renter_text"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/Payment_history_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="@+id/Renters"
        app:layout_constraintStart_toStartOf="@+id/Renters"
        app:layout_constraintTop_toBottomOf="@+id/Renters"
        app:cardBackgroundColor="#F2F8EC">
         <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:textSize="40dp"
            android:text="PAYMENT DETAILS"
            android:textAlignment="center"
            android:gravity="center"
            android:textStyle="bold"
            android:id="@+id/Payment_history_text"/>
    </androidx.cardview.widget.CardView>

     <androidx.cardview.widget.CardView
        android:id="@+id/meter_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="@+id/Payment_history_card"
        app:layout_constraintStart_toStartOf="@+id/Payment_history_card"
        app:layout_constraintTop_toBottomOf="@+id/Payment_history_card"
        app:cardBackgroundColor="#F2F8EC">
         <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:textSize="40dp"
            android:text="METER READING DETAILS"
            android:textAlignment="center"
            android:gravity="center"
            android:textStyle="bold"
            android:id="@+id/meter_reading_text"/>
    </androidx.cardview.widget.CardView>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="30dp"
    app:layout_constraintEnd_toEndOf="@+id/meter_card"
        app:layout_constraintStart_toStartOf="@+id/meter_card"
        app:layout_constraintTop_toBottomOf="@+id/meter_card"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="@dimen/cardview_compat_inset_shadow"

        >
        <LinearLayout
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fnickname"
            android:text="Nickname: "
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:textSize="20dp"/>
           <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/insert_fnickname"
            android:text="Tom"
            android:textStyle="italic"
            android:layout_margin="10dp"
            android:textSize="20dp"/>

</LinearLayout>

    </androidx.cardview.widget.CardView>
     <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
           app:cardElevation="@dimen/cardview_compat_inset_shadow"
        >
        <LinearLayout
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/frent"
            android:text="Monthly Rent in Rupees:"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:textSize="20dp"/>
           <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/insert_frent"
            android:text="1200"
            android:textStyle="italic"
            android:layout_margin="10dp"
            android:textSize="20dp"/>

</LinearLayout>

    </androidx.cardview.widget.CardView>
     <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
           app:cardElevation="@dimen/cardview_compat_inset_shadow"
        >
        <LinearLayout
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/felectricrate"
            android:text="Electricity per unit Cost: Rs."
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:textSize="20dp"/>
           <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/insert_felectricrate"
            android:text="7"
            android:textStyle="italic"
            android:layout_margin="10dp"
            android:textSize="20dp"/>

</LinearLayout>

    </androidx.cardview.widget.CardView>
     <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
           app:cardElevation="@dimen/cardview_compat_inset_shadow"
        >
         <LinearLayout
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fno_rooms"
            android:text="No. of Rooms: "
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:textSize="20dp"/>
           <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/insert_fno_rooms"
            android:text="1"
            android:textStyle="italic"
            android:layout_margin="10dp"
            android:textSize="20dp"/>

</LinearLayout>
    </androidx.cardview.widget.CardView>
     <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
           app:cardElevation="@dimen/cardview_compat_inset_shadow"
        >
        <LinearLayout
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fadvnce"
            android:text="Advance Paid in Rupees:"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:textSize="20dp"/>
           <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/insert_fadvance"
            android:text="7"
            android:textStyle="italic"
            android:layout_margin="10dp"
            android:textSize="20dp"/>

</LinearLayout>

    </androidx.cardview.widget.CardView>
     <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
           app:cardElevation="@dimen/cardview_compat_inset_shadow">
        <LinearLayout
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fjoin"
            android:text="Joined Date: "
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:textSize="20dp"/>
           <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/insert_fjoinDate"
            android:text="1-02-2023"
            android:textStyle="italic"
            android:layout_margin="10dp"
            android:textSize="20dp"/>

</LinearLayout>

    </androidx.cardview.widget.CardView>
     <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
           app:cardElevation="@dimen/cardview_compat_inset_shadow"
        >
        <LinearLayout
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/finitialMeterRead"
            android:text="Initial Meter Reading: "
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:textSize="20dp"/>
           <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/insert_finitialMeterRead"
            android:text="7"
            android:textStyle="italic"
            android:layout_margin="10dp"
            android:textSize="20dp"/>

</LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>