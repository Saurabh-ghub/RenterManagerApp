<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PaymentInfo"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardBackgroundColor="#FFC107"
        app:cardCornerRadius="20dp"
        >
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal">
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Paid Amount in Rupees: "
              android:layout_margin="10dp"
              android:textStyle="bold"
              android:textSize="20dp"
              android:id="@+id/txt_paidAmt"/>
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="1200"
              android:textStyle="italic"
              android:layout_margin="10dp"
              android:textSize="20dp"
              android:id="@+id/set_paidAmt"/>

      </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardBackgroundColor="#FFC107"
        app:cardCornerRadius="20dp"
        >
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal">
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Room Rent Payment in Rupees: "
              android:layout_margin="10dp"
              android:textStyle="bold"
              android:textSize="20dp"
              android:id="@+id/txt_paidRoomAmt"/>
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="1200"
              android:textStyle="italic"
              android:layout_margin="10dp"
              android:textSize="20dp"
              android:id="@+id/set_paidRoomAmt"/>

      </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardBackgroundColor="#FFC107"
        app:cardCornerRadius="20dp"
        >
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal">
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Electricity Payment in Rs: "
              android:layout_margin="10dp"
              android:textStyle="bold"
              android:textSize="20dp"
              android:id="@+id/txt_paidElectricAmt"/>
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="1200"
              android:textStyle="italic"
              android:layout_margin="10dp"
              android:textSize="20dp"
              android:id="@+id/set_paidElectricAmt"/>

      </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardBackgroundColor="#FFC107"
        app:cardCornerRadius="20dp"
        >
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal">
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Paid By: "
              android:textStyle="bold"
              android:layout_margin="10dp"
              android:textSize="20dp"
              android:id="@+id/txt_paidBy"/>
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Name"
              android:layout_margin="10dp"
              android:textStyle="italic"
              android:textSize="20dp"
              android:id="@+id/set_paidBy"/>

      </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardBackgroundColor="#FFC107"
        app:cardCornerRadius="20dp"
        >
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal">
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Payment Date: "
              android:textStyle="bold"
              android:layout_margin="10dp"
              android:textSize="20dp"
              android:id="@+id/txt_paidDate"/>
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="12-02-2023"
              android:textStyle="italic"
              android:layout_margin="10dp"
              android:textSize="20dp"
              android:id="@+id/set_paidDate"/>

      </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardBackgroundColor="#FFC107"
        app:cardCornerRadius="20dp"
        >
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal">
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_margin="10dp"
              android:text="Remarks: "
              android:textStyle="bold"
              android:textSize="20dp"
              android:id="@+id/txt_paidRemarks"/>
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="1200"
              android:layout_margin="10dp"
              android:textStyle="italic"
              android:textSize="20dp"
              android:id="@+id/set_paidRemarks"/>

      </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>